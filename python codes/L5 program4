#break and continue

#break: it terminates the whole program after it is written when it is fulfilled.
i=1
while i<=5:
    print(i)
    if(i==3):
        break
    i+=1
print("end of loop")


#continue :terminates execution in the current iteration and continues execution of the loop.
i=0
while i<=5:
    if(i==3):
        i+=1
        continue #skip
    print(i)
    i+=1                #as a result no 3 will not be printed; 0 to 5 but not 3

#print odd nos betn 1 to 10 using loop by skipping even nos:
i=1
while i<=10:
    if(i%2==0):
        i+=1
        continue #skip
    print(i)
    i+=1

#print even nos betn 1 to 10 using loop by skipping odd nos:
i=1
while i<=10:
    if(i%2 != 0): #even no printed
        i+=1
        continue #skip
    print(i)
    i+=1

